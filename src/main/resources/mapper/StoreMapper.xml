<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cosine.demo.dao.StoreDao">
    <resultMap id="BaseResultMap" type="com.cosine.demo.domain.Store">
        <result column="store_id" property="storeId" />
        <result column="name" property="name" />
        <result column="count" property="count" />
        <result column="product_id" property="productId" />
    </resultMap>

    <sql id="Base_Column_List">
        store_id, name, count, product_id
    </sql>

    <insert id="insert" parameterType="com.cosine.demo.domain.Store">
        insert into store(name, count, product_id) values (#{name}, #{count}, #{productId})
    </insert>

    <select id="getNumber" resultType="int">
        select count from store where product_id = #{productId}
    </select>

    <!-- "and count > 0" 使用悲观锁防止超卖 -->
    <update id="updateNumber">
        update store set count = count + #{count} where product_id = #{productId} and count + #{count} > 0
    </update>

</mapper>